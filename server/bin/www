const FriendDAO = require('../dao/friends')
let friendDAO = FriendDAO()
friendDAO.add({
  id: `g-${new Date().getTime()}${Math.floor(Math.random() * 1000) + 1000}`,
  'user_account': '17679206207',
  'friend_account': '13263940776',
  remark: ''
})

